<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:fab="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff">

    <ListView
        android:id="@+id/lvEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/outside"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        app:menu_colorNormal="@color/colorPrimary"
        app:menu_colorPressed="@color/colorPrimaryDark"
        app:menu_labels_textColor="@color/colorPrimary"
        fab:fab_shadowColor="#66000000"
        fab:fab_showShadow="true"
        fab:menu_backgroundColor="#ccffffff"
        fab:menu_labels_colorNormal="#ffffff"
        fab:menu_labels_colorPressed="#00796b"
        fab:menu_labels_colorRipple="#66FFFFFF"
        fab:menu_labels_ellipsize="middle"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_position="left"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="true"
        fab:menu_openDirection="up">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/appointment24"
            app:fab_colorNormal="#dd2c00"
            app:fab_colorPressed="#b71c1c"
            app:fab_label="appointment"
            app:fab_size="mini"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_medication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/medication24"
            app:fab_colorNormal="#689f38"
            app:fab_colorPressed="#558b2f"
            app:fab_label="medication"
            app:fab_size="mini"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_measurement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/messurment24"
            app:fab_colorNormal="#ff8f00"
            app:fab_colorPressed="#ca6c0c"
            app:fab_label="measurement"
            app:fab_size="mini"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_treatment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/treatment24"
            fab:fab_colorNormal="#0288d1"
            fab:fab_colorPressed="#0277bd"
            fab:fab_label="treatment"
            fab:fab_size="mini"/>

    </com.github.clans.fab.FloatingActionMenu>

    <FrameLayout
        android:id="@+id/Content_id_"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
