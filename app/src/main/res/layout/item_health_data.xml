<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/cv_health_data"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:layout_marginTop="8dp"
                                    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingTop="12dp">

        <ImageView
            android:id="@+id/item_health_data"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:adjustViewBounds="true"
            android:background="@drawable/circle_medication"
            android:focusable="false"
            android:gravity="center"
            android:padding="10dp"
            android:src="@drawable/heredity"/>

        <TextView
            android:id="@+id/title_health_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Heredity ( family history )"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            />
        <!--android:typeface="serif"-->

        <ImageView
            android:id="@+id/image_health_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:baselineAlignBottom="false"
            android:cropToPadding="false"
            android:focusableInTouchMode="false"
            android:forceHasOverlappingRendering="false"
            android:maxHeight="15dp"
            android:src="@drawable/arrow_right"
            android:visibility="gone"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
