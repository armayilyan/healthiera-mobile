<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorBackground"
              android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <View
                android:id="@+id/status_border"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/colorStatusDone"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvEventListItemTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="Time"
                    android:textColor="#EF9A9A"
                    android:textSize="15dp"/>


                <TextView
                    android:id="@+id/tvEventListItemRemainedTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="remained"
                    android:textColor="#b3b3b3"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvEventListItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="48dp"
                    android:clickable="false"
                    android:gravity="left"
                    android:text="tvEventListItemName sadasdasd asddasdasd das"
                    android:textColor="#80000000"
                    android:textSize="18sp"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/tvEventListItemDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:gravity="left"
                    android:text="tvEventListItemDesc"
                    android:textColor="#b3b3b3"
                    android:textSize="16sp"/>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/eventStatusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:background="@drawable/badge_cancel"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp">

                <ImageView
                    android:id="@+id/ivEventStatus"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/cancel_status"
                    android:textColor="#ffffff"/>

            </LinearLayout>

        </FrameLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
