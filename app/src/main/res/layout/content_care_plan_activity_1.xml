<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_navigation_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.healthiera.mobile.activitys.CarePlanActivity_1"
    tools:showIn="@layout/app_bar_care_plan_activity_1">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/care_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scrollbars="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"/>

    <!--<ListView-->
    <!--android:id="@+id/lvEvent"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"/>-->

    <View
        android:id="@+id/outside1"
        android:layout_width="match_parent"
        android:layout_height="510dp"
        android:visibility="gone"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp"/>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab_menu_care"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        app:menu_colorNormal="@color/colorPrimary"
        app:menu_colorPressed="@color/colorPrimaryDark"
        app:menu_labels_textColor="@color/colorPrimary"
        fab:fab_shadowColor="#66000000"
        fab:fab_showShadow="true"
        fab:menu_backgroundColor="#ccffffff"
        fab:menu_labels_colorNormal="#ffffff"
        fab:menu_labels_colorPressed="#00796b"
        fab:menu_labels_colorRipple="#66FFFFFF"
        fab:menu_labels_ellipsize="middle"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_position="left"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="true"
        fab:menu_openDirection="up">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_appointment_care"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/appointment24"
            app:fab_colorNormal="#dd2c00"
            app:fab_colorPressed="#b71c1c"
            app:fab_label="appointment"
            app:fab_size="mini"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_medication_care"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/medication24"
            app:fab_colorNormal="#689f38"
            app:fab_colorPressed="#558b2f"
            app:fab_label="medication"
            app:fab_size="mini"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_measurement_care"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/messurment24"
            app:fab_colorNormal="#ff8f00"
            app:fab_colorPressed="#ca6c0c"
            app:fab_label="measurement"
            app:fab_size="mini"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_treatment_care"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/treatment24"
            fab:fab_colorNormal="#0288d1"
            fab:fab_colorPressed="#0277bd"
            fab:fab_label="treatment"
            fab:fab_size="mini"/>

    </com.github.clans.fab.FloatingActionMenu>

    <FrameLayout
        android:id="@+id/Content_id_"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>

