<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/content_goal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:context="com.healthiera.mobile.activitys.GoalActivity"
              tools:showIn="@layout/app_bar_goal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/list_view_goals"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:divider="@color/transparent"
            android:overScrollMode="always"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#607d8b"
                app:cardCornerRadius="2dp"
                app:cardElevation="3dp">

                <Button
                    android:id="@+id/button_edit_goals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:text="Edit"
                    android:textColor="#ffffff"/>

            </android.support.v7.widget.CardView>

        </FrameLayout>

    </LinearLayout>
</LinearLayout>
