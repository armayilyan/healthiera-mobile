<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.healthiera.mobile.fragment.healthData.Complains">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:baselineAligned="false"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ln_obesity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:padding="9dp"
                            android:text="Obesity"
                            android:textColor="#458495"
                            android:textSize="18dp"/>

                        <FrameLayout
                            android:id="@+id/chkState"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/ivObestyTrack"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/switch_track_off"/>

                            <ImageView
                                android:id="@+id/ivObestyThumb"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/switch_thumb_off"/>
                        </FrameLayout>

                    </LinearLayout>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#40969696"/>

                    <LinearLayout
                        android:id="@+id/ln_thirsty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:padding="9dp"
                            android:text="Thirsty"
                            android:textColor="#458495"
                            android:textSize="18dp"/>

                        <FrameLayout
                            android:id="@+id/chkState2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/ivTthirstyTrack"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/switch_track_off"/>

                            <ImageView
                                android:id="@+id/ivThirstyThumb"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/switch_thumb_off"/>
                        </FrameLayout>
                    </LinearLayout>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#40969696"/>

                    <LinearLayout
                        android:id="@+id/ln_profuseSweating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:padding="9dp"
                            android:text="Profuse Sweating"
                            android:textColor="#458495"
                            android:textSize="18dp"/>

                        <FrameLayout
                            android:id="@+id/chkState3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/ivProfuseSweatingTrack"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/switch_track_off"/>

                            <ImageView
                                android:id="@+id/ivProfuseSweatingThumb"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/switch_thumb_off"/>
                        </FrameLayout>
                    </LinearLayout>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#40969696"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:id="@+id/ln_nocturia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_urination"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:padding="9dp"
                                android:text="Nocturia - Night Urination"
                                android:textColor="#458495"
                                android:textSize="18dp"/>

                            <FrameLayout
                                android:id="@+id/chkState4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/ivNocturiaTrack"
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/switch_track_off"/>

                                <ImageView
                                    android:id="@+id/ivNocturiaThumb"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/switch_thumb_off"/>
                            </FrameLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/urination"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/down_urination"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="20dp"
                                    android:paddingRight="20dp"
                                    android:text="-"
                                    android:textColor="#458495"
                                    android:textSize="20dp"/>

                                <EditText
                                    android:id="@+id/et_urination"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:inputType="number"
                                    android:maxLength="1"
                                    android:padding="10dp"
                                    android:text="13"
                                    android:textSize="18dp"/>

                                <TextView
                                    android:id="@+id/up_urination"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="20dp"
                                    android:paddingRight="20dp"
                                    android:text="+"
                                    android:textColor="#458495"
                                    android:textSize="20dp"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#40969696"/>

                    <LinearLayout
                        android:id="@+id/ln_polyuria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:padding="9dp"
                            android:text="Polyuria"
                            android:textColor="#458495"
                            android:textSize="18dp"/>

                        <FrameLayout
                            android:id="@+id/chkState5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/ivPolyuriaTrack"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/switch_track_off"/>

                            <ImageView
                                android:id="@+id/ivPolyuriaThumb"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/switch_thumb_off"/>
                        </FrameLayout>

                    </LinearLayout>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#40969696"/>

                    <LinearLayout
                        android:id="@+id/ln_polydipsia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:padding="9dp"
                            android:text="Polydipsia"
                            android:textColor="#458495"
                            android:textSize="18dp"/>

                        <FrameLayout
                            android:id="@+id/chkState6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/ivPolydipsiaTrack"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/switch_track_off"/>

                            <ImageView
                                android:id="@+id/ivPolydipsiaThumb"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/switch_thumb_off"/>
                        </FrameLayout>

                    </LinearLayout>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#40969696"/>

                    <LinearLayout
                        android:id="@+id/ln_bulimia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:padding="9dp"
                            android:text="Bulimia - Pathology Appetitis"
                            android:textColor="#458495"
                            android:textSize="18dp"/>

                        <FrameLayout
                            android:id="@+id/chkState7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/ivBulimiaTrack"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/switch_track_off"/>

                            <ImageView
                                android:id="@+id/ivBulimiaThumb"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/switch_thumb_off"/>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </TableLayout>
    </ScrollView>
</FrameLayout>