<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyFloatingActionButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#44beff</item>
    </style>

    <style name="MyFloatingActionLabel" parent="Theme.AppCompat.Light">
        <item name="android:background">@drawable/transparent</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#969696</item>
    </style>

    <style name="myCheckBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">#00a0a0</item>
        <item name="android:textColorSecondary">#80cbc4</item>
    </style>

    <style name="myButtonStyle" parent="Base.TextAppearance.AppCompat.Button">
        <item name="colorAccent">#00a0a0</item>
        <item name="android:width">0dp</item>
        <item name="android:height">0dp</item>
        <item name="android:textColorSecondary">#80cbc4</item>
    </style>

    <style name="myEditTextStyle">
        <item name="android:textColorSecondary">#7d608b</item>
        <item name="android:editTextColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:color">@color/colorPrimary</item>
    </style>

    <style name="mySpinnerStyle">
        <item name="android:spinnerItemStyle">@style/MySpinnerItem</item>
    </style>

    <style name="MySpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/MyTextAppearanceSpinnerItem</item>
    </style>

    <style name="MyTextAppearanceSpinnerItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#666666</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextHintStyle">
        <item name="android:textColor">#1fbba6</item>
        <item name="android:textSize">12dp</item>
    </style>

</resources>
